" disable menus, toolbar & scrollbars in gui
set guioptions-=m
set guioptions-=T
set guioptions-=r
set guioptions-=R
set guioptions-=l
set guioptions-=L

" police du gui
set guifont=DejaVu\ Sans\ Mono\ for\ Powerline\ 12

" Contenu des onglets
set guitablabel=%t%m
set showtabline=1

" to display at least 50 lines when starting
set lines=50
