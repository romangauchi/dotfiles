#!/bin/zsh

#####################################
##  Shell prompt
#####################################

# Auto-suggestions
ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE="fg=245"
# ZSH_AUTOSUGGEST_STRATEGY=(match_prev_cmd history completion)

# Theme
ZSH_THEME="powerlevel9k/powerlevel9k"

POWERLEVEL9K_MODE='awesome'
POWERLEVEL9K_SHORTEN_STRATEGY="truncate_from_right"
POWERLEVEL9K_SHORTEN_DIR_LENGTH=4
POWERLEVEL9K_PROMPT_ON_NEWLINE=true
POWERLEVEL9K_RPROMPT_ON_NEWLINE=false

POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(user host dir_writable dir)
POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(status vcs virtualenv anaconda pyenv)

# if powerline is not enabled
if [[ ! ${powerline} ]]; then
    POWERLEVEL9K_LEFT_SEGMENT_SEPARATOR=''
    POWERLEVEL9K_LEFT_SUBSEGMENT_SEPARATOR=''
    POWERLEVEL9K_RIGHT_SEGMENT_SEPARATOR=''
    POWERLEVEL9K_RIGHT_SUBSEGMENT_SEPARATOR=''
    POWERLEVEL9K_WHITESPACE_BETWEEN_LEFT_SEGMENTS=' '
fi

# Left prompt: user > host > dir
# ===========================================================
POWERLEVEL9K_USER_DEFAULT_BACKGROUND="cyan"
POWERLEVEL9K_USER_DEFAULT_FOREGROUND="white"
POWERLEVEL9K_USER_ROOT_BACKGROUND="red"
POWERLEVEL9K_USER_ROOT_FOREGROUND="white"

POWERLEVEL9K_HOST_LOCAL_BACKGROUND="green"
POWERLEVEL9K_HOST_LOCAL_FOREGROUND="black"
POWERLEVEL9K_HOST_REMOTE_BACKGROUND="orange"
POWERLEVEL9K_HOST_REMOTE_FOREGROUND="black"

POWERLEVEL9K_DIR_WRITABLE_BACKGROUND="red"
POWERLEVEL9K_DIR_WRITABLE_FOREGROUND="white"
POWERLEVEL9K_DIR_HOME_BACKGROUND="default"
POWERLEVEL9K_DIR_HOME_FOREGROUND="yellow"
POWERLEVEL9K_DIR_HOME_SUBFOLDER_BACKGROUND="default"
POWERLEVEL9K_DIR_HOME_SUBFOLDER_FOREGROUND="yellow"
POWERLEVEL9K_DIR_DEFAULT_BACKGROUND="default"
POWERLEVEL9K_DIR_DEFAULT_FOREGROUND="yellow"
POWERLEVEL9K_DIR_ETC_BACKGROUND="default"
POWERLEVEL9K_DIR_ETC_FOREGROUND="yellow"
#POWERLEVEL9K_DIR_PATH_HIGHLIGHT_BOLD=true

if [[ ${TERM} == "linux" ]]; then
    # TODO: changes all colors for linux console mode
    POWERLEVEL9K_USER_DEFAULT_BACKGROUND="none"
    POWERLEVEL9K_USER_DEFAULT_FOREGROUND="cyan"
fi

# Right prompt: status < git < virtualenv < time
# ===========================================================
POWERLEVEL9K_STATUS_OK_BACKGROUND="black"
POWERLEVEL9K_STATUS_OK_FOREGROUND="green"
POWERLEVEL9K_STATUS_ERROR_BACKGROUND="red"
POWERLEVEL9K_STATUS_ERROR_FOREGROUND="yellow"

POWERLEVEL9K_VCS_CLEAN_BACKGROUND="green"
POWERLEVEL9K_VCS_CLEAN_FOREGROUND="black"
POWERLEVEL9K_VCS_UNTRACKED_BACKGROUND="yellow"
POWERLEVEL9K_VCS_UNTRACKED_FOREGROUND="black"
POWERLEVEL9K_VCS_MODIFIED_BACKGROUND="red"
POWERLEVEL9K_VCS_MODIFIED_FOREGROUND="black"

#POWERLEVEL9K_VIRTUALENV_MODIFIED_BACKGROUND="blue"
#POWERLEVEL9K_VIRTUALENV_MODIFIED_FOREGROUND="white"

POWERLEVEL9K_TIME_BACKGROUND="black"
POWERLEVEL9K_TIME_FOREGROUND="249"
POWERLEVEL9K_TIME_FORMAT="%D{%H:%M}"

# Newline prompt: cursor
# ===========================================================
POWERLEVEL9K_MULTILINE_FIRST_PROMPT_PREFIX=""
if [[ ${powerline} ]]; then
    POWERLEVEL9K_MULTILINE_LAST_PROMPT_PREFIX="%{%F{red}%}\uE0B0%{%F{default}%} "
else
    POWERLEVEL9K_MULTILINE_LAST_PROMPT_PREFIX="%{%F{red}%}>%{%F{default}%} "
fi

